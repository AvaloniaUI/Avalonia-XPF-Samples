<Window x:Class="DevExpressApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:local="clr-namespace:DevExpressApp.Views"
        Title="DevExpress XPF App" Height="600" Width="900">

    <Grid>
        <TabControl>
            <!-- Bar Code (Default tab) -->
            <TabItem Header="Bar Code">
                <local:BarCodeView />
            </TabItem>

            <!-- Time Picker -->
            <TabItem Header="Time Picker">
                <local:TimePickerView />
            </TabItem>

            <!-- Toggle Switch -->
            <TabItem Header="Toggle Switch">
                <local:ToggleSwitchView />
            </TabItem>

            <!-- Track Bar -->
            <TabItem Header="Track Bar">
                <local:TrackBarView />
            </TabItem>
        </TabControl>
    </Grid>

</Window>
