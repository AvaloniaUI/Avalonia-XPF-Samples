<UserControl x:Class="InfragisticsApp.Views.CarouselView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:igWindows="http://infragistics.com/Windows"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    Margin="0 10 20 0">

            <TextBlock Text="XamCarouselPanel"
                       FontSize="27"
                       FontWeight="Bold"
                       Foreground="#575B57"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 10"/> 

            <TextBlock Text="Displays items in a circular manner."
                       FontSize="14"
                       Foreground="#666"
                       TextAlignment="Center"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <Grid Grid.Row="1">
            <igWindows:XamCarouselPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="400">
                <Button Content="Item 1" Width="100" Height="30"/>
                <Button Content="Item 2" Width="100" Height="30"/>
                <Button Content="Item 3" Width="100" Height="30"/>
                <Button Content="Item 4" Width="100" Height="30"/>
            </igWindows:XamCarouselPanel>
        </Grid>
    </Grid>
</UserControl>