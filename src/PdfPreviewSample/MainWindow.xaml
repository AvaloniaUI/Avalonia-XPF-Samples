<Window x:Class="PdfPreviewSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Preview Demo"
        Height="600"
        Width="900"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10">
            <TextBox x:Name="NameInput" 
                     Width="150" 
                     Margin="0,0,10,0"/>
            <TextBox x:Name="QtyInput" 
                     Width="60" Margin="0,0,10,0" 
                     Text="1"/>
            <TextBox x:Name="PriceInput" 
                     Width="80" Margin="0,0,10,0" 
                     Text="0.00"/>
            <Button Content="Add Item" 
                    Width="100" 
                    Click="AddItemButton_Click"/>
            <Button Content="Generate PDF" 
                    Width="130" 
                    Height="20" 
                    HorizontalAlignment="Right"
                    Margin="10,0,0,0" 
                    Click="GenerateAndPreviewPdfButton_Click"/>
        </StackPanel>
        
        <Border x:Name="PrintableArea"
                Grid.Row="1"
                BorderBrush="LightGray"
                BorderThickness="2"
                Padding="20"
                Background="White"
                CornerRadius="10"
                Margin="0,10">

            <StackPanel>
                <TextBlock Text="Shopping List"
                           FontSize="26"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="DarkSlateBlue"/>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock FontSize="18" Text="Product" FontWeight="Bold" Grid.Column="0"/>
                    <TextBlock FontSize="18" Text="Qty" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Center"/>
                    <TextBlock FontSize="18" Text="Price" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Right"/>
                </Grid>
                
                <ItemsControl ItemsSource="{Binding Products}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock FontSize="18" Text="{Binding Name}" Grid.Column="0"/>
                                <TextBlock FontSize="18" Text="{Binding Quantity}" Grid.Column="1" HorizontalAlignment="Center"/>
                                <TextBlock FontSize="18" Text="{Binding Price, StringFormat={}{0:C}}" Grid.Column="2" HorizontalAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</Window>
