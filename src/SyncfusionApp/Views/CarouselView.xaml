<UserControl x:Class="SyncfusionApp.Views.CarouselView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    Margin="0 10 20 20">

            <TextBlock Text="Carousel"
                       FontSize="27"
                       FontWeight="Bold"
                       Foreground="#283580"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 10"/>

            <TextBlock Text="Displays items in a circular manner."
                       FontSize="14"
                       Foreground="#333"
                       TextAlignment="Center"
                       HorizontalAlignment="Center" />
        </StackPanel>
        
        <Grid Grid.Row="1">
            <syncfusion:Carousel Name="carousel"
                                 Height="300"
                                 Width="500"
                                 SelectedIndex="0"
                                 ScaleFraction="0.7">
                <syncfusion:CarouselItem>
                    <syncfusion:CarouselItem.Content>
                        <Border Background="Red" Width="150" Height="150" CornerRadius="10" Padding="10">
                            <TextBlock Text="Apple" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontWeight="Bold" />
                        </Border>
                    </syncfusion:CarouselItem.Content>
                </syncfusion:CarouselItem>
                <syncfusion:CarouselItem>
                    <syncfusion:CarouselItem.Content>
                        <Border Background="Green" Width="150" Height="150" CornerRadius="10" Padding="10">
                            <TextBlock Text="Melon" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontWeight="Bold" />
                        </Border>
                    </syncfusion:CarouselItem.Content>
                </syncfusion:CarouselItem>
                <syncfusion:CarouselItem>
                    <syncfusion:CarouselItem.Content>
                        <Border Background="Blue" Width="150" Height="150" CornerRadius="10" Padding="10">
                            <TextBlock Text="Blueberry" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontWeight="Bold" />
                        </Border>
                    </syncfusion:CarouselItem.Content>
                </syncfusion:CarouselItem>
                <syncfusion:CarouselItem>
                    <syncfusion:CarouselItem.Content>
                        <Border Background="Yellow" Width="150" Height="150" CornerRadius="10" Padding="10">
                            <TextBlock Text="Lemon" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontWeight="Bold" />
                        </Border>
                    </syncfusion:CarouselItem.Content>
                </syncfusion:CarouselItem>
            </syncfusion:Carousel>
        </Grid>
    </Grid>
</UserControl>