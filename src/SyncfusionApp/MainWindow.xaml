<Window x:Class="SyncfusionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:local="clr-namespace:SyncfusionApp.Views"
        Title="Syncfusion XPF Controls Demo" Height="600" Width="1000"
        Background="#F3F3F3"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SidebarToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#283580"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                Padding="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F28C28"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E67E22"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#F28C28"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <DockPanel LastChildFill="True">
            
            <Border DockPanel.Dock="Left"
                    Width="180"
                    Background="#F8F8F8"
                    CornerRadius="6"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    Margin="0 0 15 0"
                    Padding="10">

                <DockPanel LastChildFill="True">
                    <Image Source="Assets/syncfusion-logo.png"
                           Height="90"
                           Width="150"
                           Stretch="Uniform"
                           DockPanel.Dock="Top"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"/>
                    
                    <StackPanel>
                        <ToggleButton x:Name="BtnBarCode" Content="Bar Code"
                                      Style="{StaticResource SidebarToggleButtonStyle}" Click="ShowBarCode" />
                        <ToggleButton x:Name="BtnTimePicker" Content="Time Picker"
                                      Style="{StaticResource SidebarToggleButtonStyle}" Click="ShowTimePicker" />
                        <ToggleButton x:Name="BtnToggleSwitch" Content="Toggle Switch"
                                      Style="{StaticResource SidebarToggleButtonStyle}" Click="ShowToggleSwitch" />
                        <ToggleButton x:Name="BtnCarousel" Content="Carousel"
                                      Style="{StaticResource SidebarToggleButtonStyle}" Click="ShowCarousel" />
                        <ToggleButton x:Name="BtnGridDemo" Content="Data Grid"
                                      Style="{StaticResource SidebarToggleButtonStyle}" Click="ShowGrid" />
                        <ToggleButton x:Name="BtnCalculator" Content="Calculator"
                                      Style="{StaticResource SidebarToggleButtonStyle}" Click="ShowCalculator" />
                    </StackPanel>
                </DockPanel>
            </Border>
            
            <Border Background="White"
                    CornerRadius="6"
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    Padding="20">
                <ContentControl x:Name="MainContent" />
            </Border>
        </DockPanel>
    </Grid>
</Window>