<Project Sdk="Xpf.Sdk/1.5.0">
    <PropertyGroup>
        <TargetFramework>net8.0-windows</TargetFramework>
        <UseWpf>true</UseWpf>
        <OutputType>exe</OutputType>
        <StartupObject>MenuTrayIconSample.Program</StartupObject>
        <DisableAutomaticXpfInit>true</DisableAutomaticXpfInit>
    </PropertyGroup>

    <!-- XPF License Key -->
    <ItemGroup>
        <RuntimeHostConfigurationOption Include="AvaloniaUI.Xpf.LicenseKey" Value="$(XpfLicenseKey)"/>
    </ItemGroup>

    <ItemGroup>
        <Resource Include="Assets\*"/>
        <AvaloniaResource Include="Assets\*"/>
    </ItemGroup>
</Project>
